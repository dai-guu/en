<div class='container px-5 px-sm-0 my-5'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー情報</h2>
        <table class="table">
          <tr><%= attachment_image_tag @user, :profile_image, size:"100x100", format:'jpeg', fallback:"no_image.jpg" %></tr>
          <tr>
            <th>name</th>
        	<th><%= @user.name %></th>
          </tr>
          <tr>
        	<th>introduction</th>
        	<th><%= @user.introduction %></th>
    	  </tr>
        </table>
        
        <% @category.each do |category| %>
          <div>
            <% if(category.name == "音楽") %>
              <%= link_to "音楽", musics_groups_path %>
            <% elsif(category.name == "グルメ") %>
              <%= link_to "グルメ", root_path %>
            <% elsif(category.name == "趣味") %>
              <%= link_to "趣味", root_path %>
            <% else %>
              <%= link_to "車・バイク", root_path %>
            <% end %>
          </div>
        <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>@Group</h2>
    </div>
  </div>
</div>